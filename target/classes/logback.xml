<configuration>
    <!--    Disable Status Startup for Logger: -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <!--    Logger appender for CONSOLE: -->
    <appender name="CONSOLE" level="error" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <!--  Logger "Flavor" + Display Level  -->
    <logger name="org.mongodb.driver" level="error" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="error">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>